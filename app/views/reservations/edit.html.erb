<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <%= render "layouts/flash"%>
      <h3 class="mt-3 mb-3">レッスン予約編集</h3>
      
      <hr>

      <%= form_with model: @reservation, local: :true do |f| %>
        <div class="row form-group">
          <%= f.label "レッスン名", "", class: "col-6 d-flex justify-content-start" do %>
            レッスン名
            <span class="ml-1 school-require-input-label">
              <span class="school-require-input-label-text">必須</span>
            </span>
          <% end%>
          <div class="col-md-6">
            <%= f.collection_select(
              :lesson_id, @lessons, :id, :name,
              {prompt: ""},
              {class: "custom-select school-login-input"})%>
          </div>
        </div>
        <div class="row form-group">
          <%= f.label "生徒名", "", class: "col-6 d-flex justify-content-start" do %>
            生徒名
            <span class="ml-1 school-require-input-label">
              <span class="school-require-input-label-text">必須</span>
            </span>
          <% end%>
          <div class="col-md-6">
            <%= f.collection_select(
              :user_id, @students, :id, :name,
              {prompt: ""},
              {class: "custom-select school-login-input"})%>
          </div>
        </div>

        <div class="row form-group">
          <%= f.label "予約時間", "", class: "col-4 d-flex justify-content-start" do %>
            予約時間
            <span class="ml-1 school-require-input-label">
              <span class="school-require-input-label-text">必須</span>
            </span>
          <% end%>
          <div class="col-md-8">
            <%= f.datetime_select :start_time %>
          </div>
        </div>
        
        <div class="form-group">
          <button type="submit" class="btn btn-primary w-100">
            レッスン登録
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>