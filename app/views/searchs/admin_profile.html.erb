<div class="bg-white mb-5">
  <div class="row">
    <div class="col-md-2 border-right">
      <div class="d-flex flex-column align-items-center text-center p-3 py-5">
        <% if @admin.image.attached? %>
          <%= image_tag @admin.image, class: "aicn-image mt-5 mb-1" %>
        <% else %>
          <%= image_tag '/images/aicn.png', class: "aicn-image mt-5" %>
        <% end %>
        <span class="font-weight-bold"><%= @admin.name %></span>
        <span class="text-black-50"><%= raw(@admin.description.gsub(/\r/, "<br>")) %></span>
      </div>
    </div>
    <div class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <div class="album">
        <div class="container">
          <h3 class="mt-3 mb-3"><%= @admin.name %>のレッスンの一覧</h3>
          <div class="row">
            <% @lessons.each do |lesson| %>
              <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                  <%= link_to lesson_path(lesson), style: "text-decoration: none;" do %>
                    <% if lesson.images.attached? %>
                      <%= image_tag lesson.images[0], class: "card-img-top", style: "height: 235px; width: 100%; display: block;" %>
                    <%else%>
                      <%= image_tag '/images/logo.png', alt: "ロゴ", class: "card-img-top", style: "height: 235px; width: 100%; display: block;" %>
                    <% end %>
                    <div class="card-body", style="border-top: 1px solid #ced4da;">
                      <div class="card-text">
                        コース名：<%= lesson.name%>
                      </div>
                      <div class="card-text">
                        説明：<%= lesson.description.truncate(15) %>
                      </div>
                      <div class="card-text">
                        金額：<%= lesson.price %>円
                      </div>
                      <div class="card-text">
                        カテゴリー：<%= lesson.category.name %>
                      </div>
                      <div class="card-text">
                        先生：<%= lesson.admin.name %>
                      </div>
                      <div class="d-flex justify-content-between align-items-center">
                        <small><%= lesson.created_at.strftime('%Y/%m/%d') %></small>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <div>
  </div>
</div>