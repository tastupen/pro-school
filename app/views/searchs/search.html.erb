<div class="row">
  <%= render partial: 'layouts/sidebar' %>
  <div class="col-md-9 ml-sm-auto col-lg-10 px-4 bg-light">
    <% if @range == "先生" %>
      <h3 class="mt-3">~先生一覧~</h3>

      <hr>

      <% @pages.each do |admin| %>
        <%= link_to admin_profile_path(admin) do %>
          <div class="d-flex justify-content-between align-items-center">
            <% if admin.image.attached? %>
              <%= image_tag admin.image, class: "aicn-image" %>
            <% else %>
              <%= image_tag '/images/aicn.png',  class: "aicn-image" %>
            <% end %>
            <%= admin.name %>
          </div> 
          <hr>
        <% end %>
      <% end %>
    <% else %>
      <h3 class="mt-3">~レッスン一覧~</h3>

      <hr>

      <% @pages.each do |lesson| %>
        <%= link_to lesson_path(lesson) do %>
          <div class="d-flex justify-content-between align-items-center">
            <% if lesson.images.attached? %>
              <%= image_tag lesson.images[0], class: "img-fuild", style: "width: 200px;" %>
            <%else%>
              <%= image_tag '/images/logo.png', alt: "ロゴ", class: "img-fuild", style: "width: 200px;" %>
            <% end %>
            <div>
              <%= lesson.name %>  
              <%= lesson.price %>
            </div>
          </div>
        <% end %>
        <hr>
      <% end %>
    <% end %>
    <%= paginate @pages %>
  </div>
</div>
