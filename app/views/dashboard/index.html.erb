<div class="container">
  <div>
    <div class="dashboard-base">
      <h1>Hello <%= @admin.name %>さん!</h1>

      <div class="mt-3">
        <div class="d-flex">
          <h3><%= @admin.name %>さんのプロフィール一覧</h3>
          <%= link_to edit_profile_admin_path do %>
            <i class="fas fa-external-link-alt fa-lg"></i>
          <% end %>
        </div>
        <div class="row">
          <div class=" col-10 d-flex justify-content-between">
            <% if @admin.image.attached? %>
              <%= image_tag @admin.image, class: "profile-image" %>
            <% else %>
              <%= image_tag '/images/aicn.png', class: "profile-image" %>
            <% end %>
            <div class="col-12">
              <div style="margin: 10px;padding-top: 60px;">
                <h4>name: <%= @admin.name %></h4>
                <P>email: <%= @admin.email %></p>
              </div>
            </div>
          </div>
        </div>
        <div class="profile-description">
          <h4>実績・経歴</h4>
          <div>
            <%= raw(@admin.description.gsub(/\r/, "<br>")) %>
          </div>
        </div>
        <hr>
        <div>
          <h3><%= @admin.name %>さんのレッスン一覧</h3>
        </div>
      </div>
    </div>
  </div>
</div>