
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="lessonModalLabel">lesson 編集</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with(model: @lesson, url: dashboard_lesson_path, remote: true) do |form| %>
        <div class="modal-body">
          <div class="form-group field">
            <%= form.label :name , class: "form-control-label"%>
            <%= form.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group field">
            <%= form.label :description , class: "form-control-label"%>
            <%= form.text_area :description, class: "form-control", style: "height: 244px;resize: none;" %>
          </div>
          <div class="form-group field">
            <%= form.label :price , class: "form-control-label"%>
            <%= form.number_field :price, class: "form-control" %>
          </div>
          <div class="form-group field">
            <%= form.label :category , class: "form-control-label"%>
            <%= form.collection_select(:category_id, @categories, :id, :name,{prompt: ""},{class: "custom-select"}) %>
          </div>
          <div class="form-group field">
            <%= form.label "画像を選択", for: "admin_image", class: "btn btn-primary w-100"%>
            <%= form.file_field :images, {style: "display: none;", multiple: true} %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">更新する</button>
        </div>
      <% end %>
    </div>
  </div>